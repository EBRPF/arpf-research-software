<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.rrcat.arpf.ui.controller.OrderRegController">
    <top>
        <HBox alignment="CENTER" prefHeight="75.0" prefWidth="600.0" style="-fx-background-color: rgb(190,220,255);">
            <Label styleClass="form-title" text="Order Registration">

            </Label>
        </HBox>
    </top>
    <center>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" percentWidth="25.0"/>
                <ColumnConstraints hgrow="ALWAYS" percentWidth="25.0"/>
                <ColumnConstraints hgrow="ALWAYS" percentWidth="15.0"/>
                <ColumnConstraints hgrow="ALWAYS" percentWidth="35.0"/>
                <ColumnConstraints/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="Infinity" percentHeight="0.0"/>
                <RowConstraints maxHeight="Infinity" percentHeight="7.0"/>
                <RowConstraints maxHeight="Infinity" percentHeight="7.0"/>
                <RowConstraints maxHeight="Infinity" percentHeight="7.0"/>
                <RowConstraints maxHeight="Infinity" percentHeight="7.0"/>
                <RowConstraints maxHeight="Infinity" percentHeight="7.0"/>
                <RowConstraints maxHeight="Infinity" percentHeight="11.0"/>
                <RowConstraints maxHeight="Infinity" percentHeight="7.0"/>
                <RowConstraints maxHeight="Infinity" percentHeight="7.0"/>
                <RowConstraints maxHeight="Infinity" percentHeight="7.0"/>
                <RowConstraints maxHeight="Infinity" percentHeight="7.0"/>
                <RowConstraints maxHeight="Infinity" percentHeight="7.0"/>
                <RowConstraints maxHeight="Infinity" percentHeight="7.0"/>
                <RowConstraints maxHeight="Infinity" percentHeight="7.0"/>
                <RowConstraints maxHeight="Infinity" percentHeight="7.0"/>
            </rowConstraints>

            <!-- <Label text="Registration Number" wrapText="true" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <Label fx:id="customerRegNo"  GridPane.columnIndex="1" GridPane.rowIndex="0" /> !-->

            <Label text="Customer Registration No." wrapText="true" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <JFXComboBox fx:id="customerRegisterNo" editable="true" promptText="..." GridPane.columnIndex="1"
                         GridPane.rowIndex="1" GridPane.fillWidth="true"/>

            <Label text="Name of Organization" wrapText="true" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <JFXTextField fx:id="organizationName" editable="false" maxWidth="Infinity" promptText="Select one..."
                          GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label text="Product Description" wrapText="true" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <JFXTextField fx:id="productDescription" maxWidth="Infinity" promptText="..." GridPane.columnIndex="1"
                          GridPane.rowIndex="3"/>

            <Label text="Product Material" wrapText="true" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <JFXTextField fx:id="productMaterial" maxWidth="Infinity" promptText="..." GridPane.columnIndex="1"
                          GridPane.rowIndex="4"/>

            <Label text="Product Detail" wrapText="true" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
            <JFXTextField fx:id="productDetail" maxWidth="Infinity" promptText="..." GridPane.columnIndex="1"
                          GridPane.rowIndex="5"/>

            <Label text="Irradiation Purpose" wrapText="true" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
            <JFXTextField fx:id="irradiationPurpose" maxWidth="Infinity" promptText="..." GridPane.columnIndex="1"
                          GridPane.rowIndex="6" GridPane.fillWidth="true"/>

            <Label text="Irradiation Mode" wrapText="true" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
            <JFXComboBox fx:id="irradiationMode" maxHeight="Infinity" maxWidth="Infinity" promptText="..."
                          GridPane.columnIndex="1" GridPane.rowIndex="7"/>

            <Label text="Required Dose" wrapText="true" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
            <JFXTextField fx:id="doseRequired" maxWidth="Infinity" promptText="..." GridPane.columnIndex="1"
                          GridPane.rowIndex="8"/>

            <Label text="Product Dimensions" wrapText="true" GridPane.columnIndex="0" GridPane.rowIndex="9"/>
            <JFXTextField fx:id="productDimensions" maxWidth="Infinity" promptText="..." GridPane.columnIndex="1"
                          GridPane.rowIndex="9"/>

            <Label text="Product Weight(gm)" wrapText="true" GridPane.columnIndex="0" GridPane.rowIndex="10"/>
            <JFXTextField fx:id="productWeight" maxWidth="Infinity" promptText="..." GridPane.columnIndex="1"
                          GridPane.rowIndex="10"/>

            <Label text="Total Number of Products" wrapText="true" GridPane.columnIndex="0" GridPane.rowIndex="11"/>
            <JFXTextField fx:id="totalSampleBoxes" maxWidth="Infinity" promptText="..." GridPane.columnIndex="1"
                          GridPane.rowIndex="11"/>

            <Label text="Any Other Info" wrapText="true" GridPane.columnIndex="0" GridPane.rowIndex="12"/>
            <JFXTextField fx:id="extraInfo" maxWidth="Infinity" promptText="..." GridPane.columnIndex="1"
                          GridPane.rowIndex="12"/>

            <Label text="Receipt Date" wrapText="true" GridPane.columnIndex="0" GridPane.rowIndex="13"
                   GridPane.fillHeight="true" GridPane.fillWidth="true"/>
            <JFXDatePicker fx:id="receiptDatePicker" maxWidth="Infinity" promptText="..." GridPane.columnIndex="1"
                          GridPane.rowIndex="13"/>

            <Label text="Registration Filled Form Scan Copy, If any" wrapText="true" GridPane.columnIndex="2"
                   GridPane.rowIndex="1" GridPane.rowSpan="2">
                <GridPane.margin>
                    <Insets left="10.0"/>
                </GridPane.margin>
            </Label>
            <StackPane fx:id="imageOuterPane" style="-fx-border-color: black;" GridPane.columnIndex="3"
                       GridPane.fillHeight="true" GridPane.fillWidth="true" GridPane.rowIndex="0" GridPane.rowSpan="9">
                <ScrollPane>
                    <ImageView fx:id="registrationScannedImg">
                    </ImageView>
                </ScrollPane>
                <GridPane.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </GridPane.margin>
            </StackPane>

            <JFXButton fx:id="uploadRegScanned" onAction="#onClickUpload"
                       style="-fx-background-color: rgb(190,220,255);" text="Upload Image" GridPane.columnIndex="2"
                       GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="9"/>

            <Label text="Facility In-Charge Comments" wrapText="true" GridPane.columnIndex="2" GridPane.rowIndex="10"
                   GridPane.rowSpan="2" GridPane.fillHeight="true" GridPane.fillWidth="true">
                <GridPane.margin>
                    <Insets left="10.0"/>
                </GridPane.margin>
            </Label>

            <JFXTextField fx:id="receiptDate" maxWidth="Infinity" promptText="..." GridPane.columnIndex="3"
                          GridPane.rowIndex="10" GridPane.rowSpan="2"/>

            <JFXCheckBox fx:id="confirmationCheckbox" text="Order processed and proceeded for further action" GridPane.columnIndex="2" GridPane.rowIndex="12" GridPane.columnSpan="2" GridPane.fillHeight="true"
                         GridPane.fillWidth="true" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                <GridPane.margin>
                    <Insets left="10.0"/>
                </GridPane.margin>
            </JFXCheckBox>


            <JFXButton fx:id="submitOrder" onAction="#onClickSubmit"
                       style="-fx-background-color: rgb(190,220,255);" text="Submit" GridPane.columnIndex="2"
                       GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="13"/>


            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
        </GridPane>
    </center>
    <stylesheets>
        <URL value="@../styles/form.css"/>
        <URL value="@../styles/font.css"/>
    </stylesheets>
</BorderPane>
