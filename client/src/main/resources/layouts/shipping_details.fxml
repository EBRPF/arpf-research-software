<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="800.0" prefWidth="1000.0" style="-fx-background-color: white;"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.rrcat.arpf.ui.controller.CustomerRegController">
    <top>
        <HBox alignment="CENTER" prefHeight="75.0" prefWidth="600.0" style="-fx-background-color: rgb(190,220,255);">
            <Label styleClass="form-title" text="Customer Registration">

            </Label>
        </HBox>
    </top>
    <center>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" percentWidth="25.0"/>
                <ColumnConstraints hgrow="ALWAYS" percentWidth="25.0"/>
                <ColumnConstraints hgrow="ALWAYS" percentWidth="15.0"/>
                <ColumnConstraints hgrow="ALWAYS" percentWidth="35.0"/>
                <ColumnConstraints/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="Infinity" percentHeight="7.69"/>
                <RowConstraints maxHeight="Infinity" percentHeight="7.69"/>
                <RowConstraints maxHeight="Infinity" percentHeight="7.69"/>
                <RowConstraints maxHeight="Infinity" percentHeight="7.69"/>
                <RowConstraints maxHeight="Infinity" percentHeight="7.69"/>
                <RowConstraints maxHeight="Infinity" percentHeight="7.69"/>
                <RowConstraints maxHeight="Infinity" percentHeight="7.69"/>
                <RowConstraints maxHeight="Infinity" percentHeight="7.69"/>
                <RowConstraints maxHeight="Infinity" percentHeight="7.69"/>
                <RowConstraints maxHeight="Infinity" percentHeight="7.69"/>
                <RowConstraints maxHeight="Infinity" percentHeight="7.69"/>
                <RowConstraints maxHeight="Infinity" percentHeight="7.69"/>
                <RowConstraints maxHeight="Infinity" percentHeight="7.69"/>
            </rowConstraints>

            <Label text="Order Number" wrapText="true" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <JFXTextField fx:id="orderNumber" promptText="..." GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Name of Organization" wrapText="true" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <JFXTextField fx:id="organizationName" promptText="..." GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Product Description" wrapText="true" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <JFXTextField fx:id="productDescription" promptText="..." GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label text="Total number of Products" wrapText="true" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <JFXTextField fx:id="productCount" promptText="..." GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <Label text="Shipped Date" wrapText="true" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <JFXDatePicker fx:id="shippedDate" promptText="..." GridPane.columnIndex="1" GridPane.rowIndex="4"/>

            <Label text="Shipping Type" wrapText="true" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
            <JFXTextField fx:id="shippingType" promptText="..." GridPane.columnIndex="1" GridPane.rowIndex="5"/>

            <Label text="Shipping Address" wrapText="true" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
            <JFXTextField fx:id="shippingAddress" promptText="..." GridPane.columnIndex="1" GridPane.rowIndex="6"/>

            <Label text="Shipping City" wrapText="true" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
            <JFXTextField fx:id="shippingCity" promptText="..." GridPane.columnIndex="1" GridPane.rowIndex="7"/>

            <Label text="Shipping State" wrapText="true" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
            <JFXTextField fx:id="shippingState" promptText="..." GridPane.columnIndex="1" GridPane.rowIndex="8"/>

            <Label text="Shipping Postal Code" wrapText="true" GridPane.columnIndex="0" GridPane.rowIndex="9"/>
            <JFXTextField fx:id="postalCode" promptText="..." GridPane.columnIndex="1" GridPane.rowIndex="9"/>

            <Label text="No. of Product shipped" wrapText="true" GridPane.columnIndex="0" GridPane.rowIndex="10"/>
            <JFXTextField fx:id="shippedCount" promptText="..." GridPane.columnIndex="1" GridPane.rowIndex="10"/>

            <JFXCheckBox  text="Dosimetry Done" fx:id="dosimetryDoneCB"  GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="11"/>


            <Label text="Scanned Gate Pass" wrapText="true" GridPane.columnIndex="2" GridPane.rowIndex="1"
                   GridPane.rowSpan="2">
                <GridPane.margin>
                    <Insets left="10.0"/>
                </GridPane.margin>
            </Label>
            <StackPane fx:id="imageOuterPane" style="-fx-border-color: black;" GridPane.columnIndex="3"
                       GridPane.fillHeight="true" GridPane.fillWidth="true" GridPane.rowIndex="0" GridPane.rowSpan="5">
                <ScrollPane>
                    <ImageView fx:id="gatePassScannedImg">
                    </ImageView>
                </ScrollPane>
                <GridPane.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </GridPane.margin>
            </StackPane>

            <JFXButton fx:id="uploadRegScanned" onAction="#onClickUpload"
                       style="-fx-background-color: rgb(190,220,255);" text="Upload Image" GridPane.columnIndex="3"
                       GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="5"/>

            <Label text="Dosimetry Report" wrapText="true" GridPane.columnIndex="2" GridPane.rowIndex="6"
                   GridPane.rowSpan="2">
                <GridPane.margin>
                    <Insets left="10.0"/>
                </GridPane.margin>
            </Label>

            <StackPane fx:id="dosimetryImageOuterPane" style="-fx-border-color: black;" GridPane.columnIndex="3"
                       GridPane.fillHeight="true" GridPane.fillWidth="true" GridPane.rowIndex="6" GridPane.rowSpan="5">
                <ScrollPane>
                    <ImageView fx:id="registrationScannedImg">
                    </ImageView>
                </ScrollPane>
                <GridPane.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </GridPane.margin>
            </StackPane>

            <JFXButton fx:id="saveRecordCustomer" onAction="#onClickSubmit"
                       style="-fx-background-color: rgb(190,220,255);" text="Submit" GridPane.columnIndex="3"
                       GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="12"/>


            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
        </GridPane>
    </center>
    <stylesheets>
        <URL value="@../styles/form.css"/>
        <URL value="@../styles/font.css"/>
    </stylesheets>
</BorderPane>
